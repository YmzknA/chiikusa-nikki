<div id="watering-button" class="flex items-center gap-2" 
     data-controller="water-effect" 
     data-water-effect-url-value="<%= increment_seed_diaries_path %>">
  <% if current_user&.can_increment_seed_count? %>
    <button type="button" 
            class="neuro-button p-2 water-button" 
            data-water-effect-target="button"
            data-action="click->water-effect#water">
            <%= image_tag 'watering_can.png', class: 'size-6' %>
    </button>
  <% else %>
    <button type="button" 
            class="neuro-button p-2 water-button" 
            data-water-effect-target="button"
            data-action="click->water-effect#water">
            <%= image_tag 'watering_can_empty.png', class: 'size-6 opacity-50' %>
    </button>
  <% end %>
</div>


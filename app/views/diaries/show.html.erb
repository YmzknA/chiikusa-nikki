<% content_for :title, "#{@diary.user.username}уБоцЧешиШ" %>
<% content_for :description, "#{@diary.date&.strftime('%Yх╣┤%mцЬИ%dцЧе')}уБоуБбуБДуБПуБХцЧешиШуБзуБЩуАВ" %>
<% set_meta_tags(
  title: "#{@diary.user.username}уБоцЧешиШ",
  description: "#{@diary.date&.strftime('%Yх╣┤%mцЬИ%dцЧе')}уБоуБбуБДуБПуБХцЧешиШуБзуБЩуАВ",
  og: {
    title: "#{@diary.user.username}уБоцЧешиШ",
    description: "#{@diary.date&.strftime('%Yх╣┤%mцЬИ%dцЧе')}уБоуБбуБДуБПуБХцЧешиШуБзуБЩуАВ",
    url: request.original_url
  },
  twitter: {
    title: "#{@diary.user.username}уБоцЧешиШ",
    description: "#{@diary.date&.strftime('%Yх╣┤%mцЬИ%dцЧе')}уБоуБбуБДуБПуБХцЧешиШуБзуБЩуАВ"
  }
) %>

<div class="min-h-screen p-4">
  <!-- Flash Messages Area -->
  <div id="flash-messages">
    <%= render 'shared/flash', flash: flash %>
  </div>

  <div class="container mx-auto max-w-2xl">
    <div class="neuro-card p-4 md:p-6 mb-6">
      <div class="flex flex-wrap items-center gap-2">
        <div class="flex-1 min-w-0">
          <h1 class="text-lg md:text-2xl lg:text-3xl font-bold text-base-content leading-tight">
            <%= @diary&.date&.strftime("%Yх╣┤%mцЬИ%dцЧе") || "цЧешиШ" %>уБоцЧешиШ ЁЯУЦ
          </h1>
        </div>
        <% if user_signed_in? %>
          <div class="flex items-center gap-2">
            <%= render 'shared/seed_counter' %>
          </div>
        <% end %>
      </div>
    </div>

    <%# цЧешиШцЙАцЬЙшАЕцГЕха▒ %>
    <%= render 'diary_owner_info' %>

    <div class="space-y-4 md:space-y-6">
      <%# TIL or Notes Section %>
      <div class="neuro-card p-4 md:p-6">
        <% if @diary&.til_text.present? %>
          <h2 class="flex items-center gap-2 text-xl md:text-2xl font-bold text-primary mb-3 md:mb-4">
            <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            Today I Learned
          </h2>
          <p class="text-base md:text-lg leading-relaxed text-base-content"><%= @diary.til_text %></p>

          <% if @diary&.notes.present? %>
            <div class="mt-4 md:mt-6">
              <div class="collapse collapse-arrow bg-base-200 border border-base-300">
                <input type="checkbox" />
                <div class="collapse-title text-lg md:text-xl font-bold text-secondary flex items-center gap-2">
                  <svg class="h-4 w-4 md:h-5 md:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  ф╗КцЧеуБоуГбуГв
                </div>
                <div class="collapse-content">
                  <div class="whitespace-pre-line text-sm md:text-base leading-relaxed text-base-content pt-2"><%= @diary.notes %></div>
                </div>
              </div>
            </div>
          <% end %>
        <% elsif @diary&.notes.present? %>
          <h2 class="flex items-center gap-2 text-xl md:text-2xl font-bold text-secondary mb-3 md:mb-4">
            <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            ф╗КцЧеуБоуГбуГв
          </h2>
          <div class="whitespace-pre-line text-sm md:text-base leading-relaxed text-base-content"><%= @diary.notes %></div>
          <%= render 'til_selection_button' %>
        <% else %>
          <h2 class="flex items-center gap-2 text-xl md:text-2xl font-bold text-warning mb-3 md:mb-4">
            <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.992-.833-2.732 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            уГбуГвуБкуБЧ
          </h2>
          <p class="text-base-content/60 text-sm md:text-base">уБУуБоцЧешиШуБлуБпуГбуГвуБМшиШщМ▓уБХуВМуБжуБДуБ╛уБЫуВУуАВ</p>
        <% end %>
      </div>

      <%# Mood & Stats Section %>
      <div class="neuro-card p-4 md:p-6">
        <h2 class="flex items-center gap-2 text-xl md:text-2xl font-bold text-accent mb-3 md:mb-4">
          <svg class="h-5 w-5 md:h-6 md:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          ф╗КцЧеуБоц░ЧхИЖуГ╗чК╢цЕЛ
        </h2>
        <div class="gap-2 md:gap-4">
          <% if @diary&.diary_answers&.any? %>
            <% @diary.diary_answers.each do |diary_answer| %>
              <div class="neuro-badge py-2 md:py-3 px-3 md:px-4 text-xs md:text-sm font-medium flex items-center gap-1 md:gap-2">
                <span class="text-lg md:text-2xl"><%= diary_answer&.answer&.emoji %></span>
                <span class="whitespace-nowrap"><%= diary_answer&.question&.label %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-base-content/60 text-sm md:text-base">ц░ЧхИЖуГ╗чК╢цЕЛуБошиШщМ▓уБМуБВуВКуБ╛уБЫуВУуАВ</p>
          <% end %>
        </div>
      </div>

      <%# Actions Section %>
      <%= render 'diary_action_buttons' %>

    </div>
  </div>
</div>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <!-- Debug information for edit diary form -->
  <% if Rails.env.development? %>
    <div class="alert alert-info mb-4">
      <details>
        <summary>Debug Info</summary>
        <p>Diary ID: <%= @diary&.id %></p>
        <p>Diary Date: <%= @diary&.date %></p>
        <p>TIL Candidates Count: <%= @diary&.til_candidates&.count %></p>
        <p>Current TIL Text: <%= @diary&.til_text %></p>
        <% @diary&.til_candidates&.each_with_index do |candidate, index| %>
          <p>Candidate <%= index + 1 %>: <%= candidate.content.truncate(50) %></p>
        <% end %>
      </details>
    </div>
  <% end %>

  <div class="flex items-center mb-8">
    <%= link_to diary_path(@diary), class: "btn btn-ghost btn-circle mr-4" do %>
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold text-base-content">TILを選択 💡</h1>
  </div>

  <div class="space-y-6">
    <!-- Diary Content Edit Section -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-secondary gap-2 mb-6">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          日記内容の編集
        </h2>

        <%= form_with(model: @diary, url: diary_path(@diary), method: :patch, local: true, class: "space-y-6") do |form| %>
          <% if @diary.errors.any? %>
            <div class="alert alert-error">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h3 class="font-bold"><%= pluralize(@diary.errors.count, "つの") %>エラーがあります:</h3>
                <ul class="list-disc list-inside mt-2">
                  <% @diary.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <!-- Notes Section -->
          <div class="form-control">
            <%= form.label :notes, "学習メモ", class: "label label-text font-semibold" %>
            <%= form.text_area :notes, placeholder: "・今日学んだ技術について\n・つまずいた問題や解決方法\n・新しい発見や気づき\n・明日やりたいこと", class: "textarea textarea-bordered h-32", rows: 6 %>
            <div class="label">
              <span class="label-text-alt text-base-content/60">メモを変更すると新しいTIL候補が生成されます</span>
            </div>
          </div>

          <!-- Mood Questions Section -->
          <% @questions&.each do |question| %>
            <div class="form-control">
              <div class="label">
                <span class="label-text font-semibold"><%= question.label %></span>
              </div>
              <div class="flex gap-2 flex-wrap">
                <% question.answers.each do |answer| %>
                  <% is_selected = @selected_answers&.dig(question.identifier) == answer.id.to_s %>
                  <label class="cursor-pointer">
                    <%= radio_button_tag "diary_answers[#{question.identifier}]", answer.id, 
                        is_selected, { class: "peer sr-only" } %>
                    <div class="btn btn-outline btn-lg text-2xl hover:btn-primary transition-all duration-200 peer-checked:btn-primary peer-checked:bg-primary peer-checked:text-primary-content">
                      <%= answer.emoji %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Public Setting -->
          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-4">
              <%= form.check_box :is_public, class: "checkbox checkbox-primary" %>
              <span class="label-text font-semibold">この日記を公開する</span>
            </label>
          </div>

          <!-- Save Button for Notes and Mood -->
          <div class="form-control mt-8">
            <%= form.submit "メモと気分を保存", class: "btn btn-secondary btn-lg w-full" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- TIL Selection Section -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary gap-2 mb-6">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          TIL選択
        </h2>
        <p class="text-base-content/70 mb-6">AIが生成したTIL候補から選択してください。</p>

        <%= form_with(model: @diary, url: diary_path(@diary), method: :patch, local: true, class: "space-y-6") do |form| %>

        <% if @diary&.til_candidates&.any? %>
          <div class="space-y-4">
            <% @diary.til_candidates.each_with_index do |candidate, index| %>
              <div class="form-control">
                <%= form.label :"til_text_#{candidate.id}", class: "label cursor-pointer justify-start gap-4 p-4 border border-base-300 rounded-lg hover:border-primary hover:bg-base-200 hover:shadow-md transition-all duration-200" do %>
                  <%= form.radio_button :til_text, candidate.content, 
                    { class: "radio radio-primary", 
                      id: "diary_til_text_#{candidate.id}",
                      checked: @diary.til_text == candidate.content } %>

                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <div class="badge badge-primary badge-sm">候補 <%= index + 1 %></div>
                      <% if @diary.til_text == candidate.content %>
                        <div class="badge badge-success badge-sm">選択中</div>
                      <% end %>
                    </div>
                    <div class="text-left text-base-content leading-relaxed whitespace-pre-wrap">
                      <%= candidate.content %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.992-.833-2.732 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"></path></svg>
            <div>
              <h3 class="font-bold">TIL候補がありません</h3>
              <div>この日記にはAIが生成したTIL候補がありません。メモを追加してから再度お試しください。</div>
            </div>
          </div>
          
          <div class="card-actions justify-center mt-6">
            <%= link_to diary_path(@diary), class: "btn btn-ghost gap-2" do %>
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              日記に戻る
            <% end %>
          </div>
        <% end %>

        <% if @diary&.til_candidates&.any? %>
          <div class="divider"></div>

          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-4">
              <%= check_box_tag :push_to_github, true, false, class: "checkbox checkbox-primary" %>
              <div class="flex-1">
                <div class="label-text font-semibold">GitHubにプッシュする</div>
                <div class="label-text-alt text-base-content/60">選択したTILをGitHubリポジトリに自動で追加します</div>
              </div>
            </label>
          </div>
        <% end %>

        <% if @diary&.til_candidates&.any? %>
          <div class="form-control mt-8">
            <%= form.submit "日記を完成させる", class: "btn btn-primary btn-lg w-full" %>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


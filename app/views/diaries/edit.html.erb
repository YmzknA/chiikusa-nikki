<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="flex items-center mb-8">
    <%= link_to diary_path(@diary), class: "btn btn-ghost btn-circle mr-4" do %>
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold text-base-content">TILを選択 💡</h1>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-base-content mb-2">AIが生成したTIL候補</h2>
        <p class="text-base-content/70">あなたの学習メモをもとに作成されました。お気に入りのものを選んでください。</p>
      </div>

      <%= form_with(model: @diary, url: diary_path(@diary), method: :patch, class: "space-y-6") do |form| %>
        <% if @diary.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <div>
              <h3 class="font-bold"><%= pluralize(@diary.errors.count, "つの") %>エラーがあります:</h3>
              <ul class="list-disc list-inside mt-2">
                <% @diary.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="space-y-4">
          <% @diary.til_candidates.each_with_index do |candidate, index| %>
            <div class="form-control">
              <%= form.radio_button :til_text, candidate.content, class: "radio radio-primary hidden", id: "til_text_#{candidate.id}" %>
              <%= form.label "til_text_#{candidate.id}", class: "label cursor-pointer justify-start gap-4 p-4 border border-base-300 rounded-lg hover:border-primary hover:bg-base-200 transition-all duration-200" do %>
                <div class="radio radio-primary"></div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <div class="badge badge-primary badge-sm">候補 <%= index + 1 %></div>
                  </div>
                  <div class="text-left text-base-content leading-relaxed">
                    <%= candidate.content %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="divider"></div>

        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-4">
            <%= check_box_tag :push_to_github, true, false, class: "checkbox checkbox-primary" %>
            <div class="flex-1">
              <div class="label-text font-semibold">GitHubにプッシュする</div>
              <div class="label-text-alt text-base-content/60">選択したTILをGitHubリポジトリに自動で追加します</div>
            </div>
          </label>
        </div>

        <div class="form-control mt-8">
          <%= form.submit "日記を完成させる", class: "btn btn-primary btn-lg w-full gap-2" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            日記を完成させる
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

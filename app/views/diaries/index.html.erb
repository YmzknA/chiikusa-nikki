<h1>日記一覧</h1>

<%= link_to "新しい日記を書く", new_diary_path %>

<% @diaries.each do |diary| %>
  <div>
    <h2><%= diary.date %></h2>
    <% if diary.til_text.present? %>
      <p><strong>TIL:</strong> <%= diary.til_text %></p>
    <% elsif diary.til_candidates.any? %>
      <p><%= diary.notes %></p>
      <%= link_to "TILを選択する", edit_diary_path(diary) %>
    <% else %>
      <p><%= diary.notes %></p>
    <% end %>
    <div>
      <% diary.diary_answers.each do |diary_answer| %>
        <span><%= diary_answer.question.label %>: <%= diary_answer.answer.emoji %></span>
      <% end %>
    </div>
    <p>公開設定: <%= diary.is_public? ? "公開" : "非公開" %></p>
  </div>
<% end %>

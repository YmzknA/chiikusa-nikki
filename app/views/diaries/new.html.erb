<div class="min-h-screen lemonade-background p-4">
  <div class="container mx-auto max-w-2xl">
    <div class="neuro-card p-6 mb-6">
      <div class="flex items-center">
        <%= link_to diaries_path, class: "neuro-button p-3 mr-4 inline-flex items-center justify-center" do %>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-base-content">新しい日記 ✍️</h1>
      </div>
    </div>

    <div class="neuro-card p-6">
      <%= form_with(model: @diary, url: diaries_path, local: true, class: "space-y-6") do |form| %>
        <% if @diary.errors.any? %>
          <div class="neuro-error p-4 mb-4 rounded-2xl">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-error flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h3 class="font-bold text-error"><%= pluralize(@diary.errors.count, "つの") %>エラーがあります:</h3>
                <ul class="list-disc list-inside mt-2 text-base-content/80">
                  <% @diary.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="form-control">
          <%= form.label :date, "日付", class: "block text-base-content font-semibold mb-2" %>
          <%= form.date_field :date, value: @date, class: "neuro-input py-3 px-4 w-full max-w-xs", required: true %>
        </div>

        <% @questions.each do |question| %>
          <div class="form-control">
            <div class="mb-3">
              <span class="block text-base-content font-semibold mb-2"><%= question.label %></span>
            </div>
            <div class="flex gap-3 flex-wrap">
              <% question.answers.each do |answer| %>
                <% is_selected = @selected_answers&.dig(question.identifier.to_s) == answer.id.to_s %>
                <label class="cursor-pointer">
                  <%= radio_button_tag "diary_answers[#{question.identifier}]", answer.id, 
                      is_selected, { class: "peer sr-only" } %>
                  <div class="neuro-button py-3 px-4 text-2xl peer-checked:!bg-primary peer-checked:!text-primary-content peer-checked:!shadow-inner">
                    <%= answer.emoji %>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="form-control">
          <%= form.label :notes, "今日学んだこと・感じたこと", class: "block text-base-content font-semibold mb-2" %>
          <%= form.text_area :notes, placeholder: "・今日学んだ技術について\n・つまずいた問題や解決方法\n・新しい発見や気づき\n   など", class: "neuro-input w-full h-32 py-4 px-4 resize-none", rows: 6 %>
        </div>

        <div class="form-control">
          <label class="flex items-center gap-3 cursor-pointer neuro-badge py-3 px-4">
            <%= form.check_box :is_public, class: "checkbox checkbox-secondary bg-gray-100" %>
            <span class="text-base-content font-semibold">この日記を公開する</span>
          </label>
        </div>

        <div class="form-control mt-8">
          <%= form.submit "日記を作成", class: "neuro-button w-full py-4 px-6 font-bold text-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

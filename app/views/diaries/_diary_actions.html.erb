<%# 日記詳細画面のアクション部分（編集・削除・GitHub等） %>
<div class="neuro-card p-4 md:p-6">
  <div class="flex justify-between lg:items-center gap-3 lg:gap-4">
    <div class="flex items-center gap-2">
      <% if @diary&.is_public? %>
        <div class="neuro-card p-4 md:px-4 text-xs md:text-sm font-medium flex items-center gap-1 md:gap-2">
          <span class="material-symbols-outlined">
            visibility
          </span>
          公開
        </div>
      <% else %>
        <div class="neuro-badge py-1 md:py-2 px-2 md:px-4 text-xs md:text-sm font-medium flex items-center gap-1 md:gap-2">
          <span class="material-symbols-outlined">
            visibility_off
          </span>
          非公開
        </div>
      <% end %>
    </div>

    <div>
      <% if diary_owner? %>
        <%# Xシェア機能 - 公開日記かつ、所有者のみ表示 %>
        <% if @diary&.is_public? %>
          <%= render 'diaries/x_share_section' %>
        <% end %>

        <%# GitHub関連ボタン - 所有者のみ表示 %>
        <%= render 'diaries/github_upload_section' %>
      <% end %>
    </div>
  </div>

  <%# 編集・削除ボタン - 所有者のみ表示 %>
  <% if diary_owner? %>
    <%= render 'diaries/edit_delete_section' %>
  <% end %>
</div>
